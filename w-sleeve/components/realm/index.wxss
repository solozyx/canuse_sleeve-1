
.container {
    box-sizing: border-box;
    background-color: white;
    max-height: 1100rpx;
    min-height: 700rpx;
    margin-bottom: 100rpx;
}

.inner-container {
    padding: 30rpx 30rpx 0 30rpx;
}

.sku-priview {
    display: flex;
    flex-direction: row;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.sku-pending {
    font-size: 20rpx;
}

.price-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.discount-price {
    margin-left: 20rpx;
}

.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.counter-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 34rpx;
    padding-bottom: 200rpx;
}

.counter-text {
    font-size: 24rpx;
}

.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}

.bottom-btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100rpx;
    background-color: #333333;
    position: absolute;
    bottom: 0;
}

.out-stock {
    background-color: #DCEBE6;
}

.bottom-btn text {
    color: #ffffff;
}

.sku-pending > text:first-child {
    color:#999999
}
.sku-pending > text:nth-child(2) {
color: #666666
}
