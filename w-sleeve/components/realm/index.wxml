
<view class="container">
    <view class="sku-priview">
        <image class="sku-img" src=""></image>
        <view class="sku-description">
            <text class="title">测试Sku</text>
            <view>
                <view class="price-row">
                    <l-price value="777"
                             color="#157658"
                             valueSize="28"
                             unitSize="20"
                             autofix>
                    </l-price>
                    <l-price deleted
                             value="999"
                             color="#999999"
                             size="26"
                             l-class="discount-price">
                    </l-price>
                </view>
                <view class="sku-pending">
                    <text>请选择</text>
                </view>
            </view>
        </view>
    </view>
    <block wx:for="{{fences}}" wx:key="{{index}}">
        <s-fence x="{{index}}" bind:celltap="onCellTap" fence="{{item}}"></s-fence>
    </block>
    <view class="counter-container">
    </view>
</view>