.container {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 34rpx 30rpx 26rpx 30rpx;
    background-color: white;
}

.left {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.tags {
    display: flex;
    flex-direction: row;
    margin-top: 8rpx;
}

.l-tag {
    margin-right: 6rpx !important;
}

.subtitle {
    color: #999999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
}

.price-row {
    display: flex;
    align-items: baseline;
}

.l-price-unit {
    margin-right: 14rpx !important;
}

.discount-price {
    margin-left: 20rpx;
    margin-right: 80rpx;
}

.discount-tag {
    position: relative !important;
    bottom: 4rpx;
    width: 50rpx;
    border-radius: 20rpx !important;
}