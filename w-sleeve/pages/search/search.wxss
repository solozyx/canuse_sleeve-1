page {
    background-color: white;
}

.input {
    border-radius: 0 !important;
}

.header {
    background-color: white;
    border-bottom: 1rpx solid #f3f3f3;
    padding-bottom: 14rpx;
    position: fixed;
    z-index: 77;
    width: 750rpx;
    top: 0;
}

.container {
    padding-top: 70rpx;
}

.history-container {
    display: flex;
    flex-direction: column;
}

.history-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 38rpx;
}

.history-title-text {
    font-size: 28rpx;
    color: #333333;
}

.history-slide {
    width: 8rpx;
    height: 46rpx;
    background-color: #157658;
    margin-right: 22rpx;
}

.history-icon {
    margin-right: 30rpx;
}

.tag {
    background-color: #f3f3f3 !important;
    color: #666666 !important;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.history-tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
    justify-content: flex-start;
    margin-top: 20rpx;
    padding-left: 30rpx;

}