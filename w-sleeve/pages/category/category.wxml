<view class="container">
    <view class="search-container">
        <l-button width="710"
                height="60"
                icon="research"
                iconSize="24"
                iconColor="#C4C9D2"
                l-class="search-btn"
                bind:lintap="onGotoSearch"
                shape="square">
        搜索商品
        </l-button>
    </view>
    <view class="main">
        <l-segment
                height="{{h}}"
                width="160"
                itemHeight="90"
                even="{{false}}"
                placement="left"
                scrollable
                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                l-line-class="l-seg-line">
            <block wx:for="{{roots}}" wx:key="{{index}}">
                <l-segment-item key="{{index}}" tab="{{item.name}}"></l-segment-item>
            </block>
        </l-segment>
        <view></view>
    </view>
</view>